<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background"
    tools:context=".Login4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll2"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEET UP"
            android:fontFamily="@font/bold"
            android:textSize="40sp"
            android:textColor="@color/white"
            />

        <View
            android:layout_weight="1"
            android:id="@+id/underline"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="6dp"
            android:background="@drawable/butoon_follow_background"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/regular"
            android:text="@string/login4_text"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:background="@drawable/login4_login_button"
            android:elevation="10dp"
            android:fontFamily="@font/regular"
            android:text="Login" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_register"
            android:layout_width="220dp"
            android:layout_height="64dp"
            android:textSize="21sp"
            android:textColor="@color/login4_yellow"
            android:background="@drawable/login4_register_button"
            android:fontFamily="@font/regular"
            android:text="Register" />

    </LinearLayout>


</RelativeLayout>