<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLoginScreen"
                android:layout_margin="16dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivLoginScreen"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_flattr" />

                    <TextView
                        android:id="@+id/tvLoginScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="Login Screen"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileScreen"
                android:layout_margin="16dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivProfileScreen"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="@drawable/ic_flattr" />

                    <TextView
                        android:id="@+id/tvProfileScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="Profile Screen"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNavigation"
                android:layout_margin="16dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivNavigation"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="@drawable/ic_flattr" />

                    <TextView
                        android:id="@+id/tvNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="Navigation"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWalkthrough"
                android:layout_margin="16dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivWalkthrough"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="@drawable/ic_flattr" />

                    <TextView
                        android:id="@+id/tvWalkthrough"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="Walk Through"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMaterialDesign"
                android:layout_margin="16dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivMaterialDesign"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:background="@drawable/ic_flattr" />

                    <TextView
                        android:id="@+id/tvMaterialDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:text="Material Design"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </ScrollView>


</RelativeLayout>